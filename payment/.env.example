# Porta da API
PORT=3000
NODE_ENV=development

# Trust proxy (0 = desabilitado, 1 = habilitado)
TRUST_PROXY=0

# API key para autenticacao (defina AUTH_REQUIRED=false para desabilitar em dev)
API_KEY=
AUTH_REQUIRED=true

# CORS
# Use "*" para liberar todas ou lista separada por virgula
CORS_ORIGINS=http://localhost:5173
CORS_CREDENTIALS=false

# Rate limit (janela em ms e maximo de requisicoes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=300

# Logs
LOG_LEVEL=info
LOG_PRETTY=false
WOOVI_LOG_PATH=logs/woovi-log.jsonl

# Banco local (SQLite)
DB_PATH=data/payment.db

# Woovi (PIX)
# API base (producao): https://api.woovi.com
# API base (sandbox): https://api.woovi-sandbox.com
WOOVI_API_KEY=
WOOVI_BASE_URL=https://api.woovi-sandbox.com
# Se precisar de um header customizado, defina aqui (ex: "Basic <base64>")
WOOVI_AUTH_HEADER=
# Criacao de cobranca PIX: POST /api/v1/charge
WOOVI_PIX_PATH=/api/v1/charge
# A Woovi nao expoe endpoint publico para confirmar PIX (use webhooks)
WOOVI_PIX_CONFIRM_PATH=
# Cartao nao consta no OpenAPI publico; preencha se sua conta tiver esse endpoint
WOOVI_CARD_PATH=
WOOVI_TIMEOUT_MS=10000

# Pagar.me (legado)
PAGARME_API_KEY=
PAGARME_BASE_URL=https://api.pagar.me/1

# Segredos para validacao de webhooks (HMAC SHA)
PIX_WEBHOOK_SECRET=
WOOVI_WEBHOOK_SECRET=
PAGARME_WEBHOOK_SECRET=
WEBHOOK_REQUIRE_TIMESTAMP=false
WEBHOOK_TOLERANCE_SECONDS=300

# Limite de tamanho do body JSON
JSON_BODY_LIMIT=1mb
