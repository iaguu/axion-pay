# AxionPAY (example env)
NODE_ENV=development
PORT=3060

# Auth (optional). If set, /payments requires API key.
AUTH_REQUIRED=false
API_KEY=

# CORS (dev convenience)
ALLOW_ALL_CORS=true

# Storage (optional)
# STORAGE_ROOT=
# STORAGE_FILE=store.json

# Payout (optional)
# MIN_PAYOUT_ACCOUNT_AGE_MS=172800000
# Fees in cents/bps (defaults match current UI)
